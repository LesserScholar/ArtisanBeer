                                </Widget>
                            </Children>
                        </ListPanel>
                    </Children>
                </Standard.Window>
                <Standard.DialogCloseButtons Parameter.CancelButtonAction="ExecuteCancel" Parameter.CancelButtonText="Cancel" Parameter.DoneButtonAction="ExecuteDone" Parameter.DoneButtonText="Done" />
